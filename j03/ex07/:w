#include	<stdio.h>

char	*ft_strrev(char *str)
{
	int		i;
	char	x;

	i = 0;
	while (str[i + 1] != 0)
	{
		x = str[i];
		str[i] = str[i + 1];
		str[i + 1] = x;
		i++;
	}
	return (str);
}

int		main()
{
	char	str[] = "abc";

	printf("%d\n", ft_strrev(str));
	return (0);
}
